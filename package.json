{
  "name": "foodfeed",
  "version": "1.0.0",

  "description": "A MERN app that connects viewers to livestream cooking channels",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adam-verma/FoodFeed.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adam-verma/FoodFeed/issues"
  },
  "homepage": "https://github.com/adam-verma/FoodFeed#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "if-env": "^1.0.4",
    "is-empty": "^1.2.0",
    "jso": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "axios": "^0.19.2",
    "concurrently": "^5.1.0",
    "express": "^4.17.1",
    "express-mongoose": "^0.1.0",
    "mongoose": "^5.9.3",
    "nodemon": "^2.0.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  }
}
